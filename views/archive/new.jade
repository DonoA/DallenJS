extends ../layout

block content
  h1(align='center') New Archive Entry
  form(align='left' method='post' enctype='multipart/form-data')
    span Name
    br
    input(name='name' required).form-control
    br
    br
    span Description
    br
    textarea(name='description' required).form-control
    br
    br
    span Downloads (optional)
    br
    .input-group
      label.input-group-btn
        span.btn.btn-default
          | Browse
          input(type='file' name='downloads' style='display: none;' multiple)
      input.form-control(type='text' readonly)
    br
    br
    div(align='center')
      input(type='submit' value='Save').btn
