extends layout

block content
    h1 Minecraft Middle Earth Spigot Plugins
    hr
    nav#sidenav.nav.navbar-left
        each plugin in plugins.mcme
            li
                a#tab-images(data-toggle='tab', href='#mcme-#{plugin.name}', onclick="update_toolbar()") #{plugin.name}
    .container
      .tab-content
        each plugin in plugins.mcme
            div(id='mcme-#{plugin.name}' class='tab-pane')
                h3= plugin.name
                - var repo = github + plugin.repo;
                p Visit the 
                    a(href='#{repo}') GitHub Repo
                p Download a 
                    a(href='#{repo}/archive/master.zip') zipfile
