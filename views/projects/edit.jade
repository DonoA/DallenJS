extends ../layout

block content
  h1(align='center') Edit #{page.name}
  form(align='left' method='post')
    span Name
    br
    input(name='name' value='#{page.name}' required).form-control
    br
    br
    span Project Category
    br
    input(name='type' value='#{page.type}' readonly required).form-control
    br
    br
    span Repo Url (optional)
    br
    input(name='repo' value='#{page.repo || ""}').form-control
    br
    br
    span Description
    br
    textarea(name='description' required).form-control #{page.description}
    br
    br
    span Readme Url (optional)
    br
    input(name='readme' value='#{page.readme || ""}').form-control
    br
    br
    div(align='center')
      input(type='submit' value='Save').btn
