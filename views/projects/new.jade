extends ../layout

block content
  h1(align='center') New Project
  form(align='left' method='post')
    span Name
    br
    input(name='name' required).form-control
    br
    br
    span Project Category
    br
    input(name='type' required).form-control
    br
    br
    span Repo Url (optional)
    br
    input(name='repo').form-control
    br
    br
    span Description
    br
    textarea(name='description' required).form-control
    br
    br
    span Readme Url (optional)
    br
    input(name='readme').form-control
    br
    br
    div(align='center')
      input(type='submit' value='Save').btn
